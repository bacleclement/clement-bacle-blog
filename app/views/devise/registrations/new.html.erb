<%= render 'shared/logo' %>
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="devise-card text-center">
        <h2>Inscription</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, placeholder: "email", class: "input" %>
            <%= f.input :password, required: true, label: false, placeholder: "password", class: "input" %>
            <%= f.input :password_confirmation, required: true, label: false, placeholder: "password_confirmation", class: "input" %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "S\'incrire", class: "btn-log-in" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
