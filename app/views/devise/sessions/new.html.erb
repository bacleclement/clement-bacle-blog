<%= render 'shared/logo' %>
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="devise-card text-center">
        <h2>Connexion</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, placeholder: "Email", class: 'input' %>
            <%= f.input :password, required: false, placeholder: "password", class: 'input' %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Se connecter", class: "btn-log-in" %>
          </div>

        <% end %>
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>r

